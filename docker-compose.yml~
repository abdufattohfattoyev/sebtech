version: '3.9'

services:
  app:
    build: .
    container_name: django_app
    volumes:
      - .:/app
      - static-data:/app/staticfiles
      - media-data:/app/media
    environment:
      - PYTHONUNBUFFERED=1
    networks:
      - app-network

  nginx:
    image: nginx:latest
    container_name: nginx_server
    ports:
      - "80:80"
      - "443:443"
    volumes:
      - ./nginx/nginx.conf:/etc/nginx/conf.d/default.conf
      - static-data:/app/staticfiles
      - media-data:/app/media
      - certbot-etc:/etc/letsencrypt
      - certbot-var:/var/lib/letsencrypt
      - certbot-www:/var/www/certbot
    depends_on:
      - app
    networks:
      - app-network

  certbot:
    image: certbot/certbot
    container_name: certbot
    volumes:
      - certbot-etc:/etc/letsencrypt
      - certbot-var:/var/lib/letsencrypt
      - certbot-www:/var/www/certbot
    # Entrypoint-ni olib tashladik
    command: certonly --webroot -w /var/www/certbot --force-renewal --email abdufattohfattoyev0@gmail.com -d seb-tech.uz -d www.seb-tech.uz --agree-tos --non-interactive

networks:
  app-network:
    driver: bridge

volumes:
  static-data:
  media-data:
  certbot-etc:
  certbot-var:
  certbot-www: