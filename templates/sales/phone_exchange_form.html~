                        <div class="mt-2">
                            <strong>To'lovlar yig'indisi:</strong> <span id="paymentTotal" class="badge bg-warning text-dark">$0.00</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Mijoz ma'lumotlari -->
        <div class="card mb-3">
            <div class="card-header bg-info text-white">
                <h6 class="mb-0"><i class="fas fa-user"></i> Mijoz ma'lumotlari</h6>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-4 mb-3">
                        <label class="form-label fw-bold">Mijoz ismi <span class="text-danger">*</span></label>
                        {{ form.customer_name_input }}
                    </div>
                    <div class="col-md-4 mb-3">
                        <label class="form-label fw-bold">Mijoz telefon raqami <span class="text-danger">*</span></label>
