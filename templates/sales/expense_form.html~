<script>
// Qarz tanlanganida qoldiq summasini ko'rsatish
document.addEventListener('DOMContentLoaded', function() {
    const debtSelect = document.getElementById('{{ form.debt.id_for_label }}');
    const paymentAmount = document.getElementById('{{ form.payment_amount.id_for_label }}');

    function updateMaxAmount() {
        const selectedOption = debtSelect.options[debtSelect.selectedIndex];
        if (selectedOption && selectedOption.text.includes('$')) {
            const maxAmount = selectedOption.text.match(/\$(\d+\.?\d*)/);
            if (maxAmount) {
                paymentAmount.setAttribute('max', maxAmount[1]);
                paymentAmount.setAttribute('placeholder', `Maksimal: $${maxAmount[1]}`);
            }
        }
    }

    debtSelect.addEventListener('change', updateMaxAmount);
    updateMaxAmount();
});
</script>
{% endblock %}