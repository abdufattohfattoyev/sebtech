<script>
function confirmDelete(url, name) {
    if (confirm(`"${name}" xarajatini o'chirishni tasdiqlaysizmi?\n\nBu amalni qaytarib bo'lmaydi!`)) {
        window.location.href = url;
    }
}
</script>
