<script>
// Filter functions
function filterDebts(status) {
    const rows = document.querySelectorAll('.debt-row');
    const buttons = document.querySelectorAll('.filter-btns button');

    // Update active button in status group
    buttons.forEach(btn => {
        if (btn.textContent.toLowerCase().includes(status) ||
            (status === 'all' && btn.textContent === 'Barchasi')) {
            btn.classList.add('active');
        } else if (!btn.onclick.toString().includes('filterDebtType')) {
            btn.classList.remove('active');
        }
    });

    rows.forEach(row => {
        const match = status === 'all' || row.dataset.status === status;
        row.style.display = match ? '' : 'none';
    });
}

function filterDebtType(type) {
    const rows = document.querySelectorAll('.debt-row');
    const buttons = document.querySelectorAll('.filter-btns button');

    // Update active button in type group
    buttons.forEach(btn => {
        if (btn.onclick && btn.onclick.toString().includes('filterDebtType')) {
            if (btn.textContent.toLowerCase().includes(type.split('_')[0]) ||
                (type === 'all' && btn.textContent === 'Barchasi')) {
                btn.classList.add('active');
            } else {
                btn.classList.remove('active');
            }
        }
    });

    rows.forEach(row => {
        const match = type === 'all' || row.dataset.debtType === type;
        row.style.display = match ? '' : 'none';
    });
}

function confirmDelete(debtId, debtorName) {
    document.getElementById('debtorName').textContent = debtorName;
    document.getElementById('deleteForm').action = `/sales/debts/${debtId}/delete/`;
    new bootstrap.Modal(document.getElementById('deleteModal')).show();
}

// Muddat ranglarini dinamik yangilash
function updateDueDateColors() {
    const today = new Date();
    today.setHours(0, 0, 0, 0);

    document.querySelectorAll('.date-due').forEach(el => {
        if (!el.dataset.due) return;

        const dueDate = new Date(el.dataset.due);
        dueDate.setHours(0, 0, 0, 0);

        const diffDays = Math.ceil((dueDate - today) / (1000 * 60 * 60 * 24));

        el.className = 'date-due';
        if (diffDays < 0) {
            el.classList.add('overdue');
        } else if (diffDays <= 3) {
            el.classList.add('soon');
        } else if (diffDays <= 7) {
            el.classList.add('warning');
        } else {
            el.classList.add('ok');
        }
    });
}

// Initialize
document.addEventListener('DOMContentLoaded', function() {
    updateDueDateColors();
    setInterval(updateDueDateColors, 60000);
});
</script>
{% endblock %}