{% block content %}
<div class="container-fluid py-4">
    <div class="form-box">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2>{{ title }}</h2>
            <a href="{% url 'sales:accessory_sale_list' %}" class="btn btn-outline-secondary">Orqaga</a>
        </div>

        <form method="post" id="accessoryForm">
            {% csrf_token %}

            <!-- Aksessuar -->
            <div class="section">
                <h3 class="section-title">Aksessuar</h3>
                <div class="row">
                    <div class="col-md-6 mb-3">
                        {{ form.accessory_code.label_tag }}
                        {{ form.accessory_code }}
                    </div>
                    <div class="col-md-6 mb-3">
                        {{ form.accessory.label_tag }}
                        {{ form.accessory }}
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6 mb-3">
                        {{ form.quantity.label_tag }}
                        {{ form.quantity }}
                    </div>
                    <div class="col-md-6 mb-3">
                        {{ form.unit_price.label_tag }}
                        {{ form.unit_price }}
                    </div>
                </div>
            </div>

            <!-- Mijoz -->
            <div class="section">
