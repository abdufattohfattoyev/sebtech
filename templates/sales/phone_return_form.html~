{% block content %}
<div class="container mt-4">
    <h2 class="mb-4">
        {% if form.instance.pk %}
            Telefon qaytarishni tahrirlash
        {% else %}
            Yangi telefon qaytarish
        {% endif %}
    </h2>

    <form id="returnForm" method="post" action="{% if form.instance.pk %}{% url 'sales:phone_return_edit' form.instance.pk %}{% else %}{% url 'sales:phone_return_create' %}{% endif %}">
        {% csrf_token %}

        <!-- IMEI Search -->
        <div class="mb-3 position-relative">
            <label for="imeiSearch" class="form-label">Telefon IMEI bo'yicha qidirish</label>
            <input type="text" id="imeiSearch" class="form-control" placeholder="IMEI kiriting" autocomplete="off">
            <div id="searchResults" class="search-results"></div>
        </div>

        <!-- Hidden Phone Sale Input -->
        {{ form.phone_sale }}

        <!-- Selected Phone Sale -->
        <div id="selectedPhone" class="card mb-3 {% if form.instance.phone_sale %}show{% endif %}">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h5 id="phoneTitle" class="card-title">
                            {% if form.instance.phone_sale %}
                                {{ form.instance.phone_sale.phone.phone_model.model_name }} {{ form.instance.phone_sale.phone.memory_size.size }}
                            {% endif %}
                        </h5>
                        <p id="phoneDetails" class="card-text">
                            {% if form.instance.phone_sale %}
                                IMEI: {{ form.instance.phone_sale.phone.imei }}
                            {% endif %}
                        </p>
                        <p id="phoneSaleInfo" class="card-text">
                            {% if form.instance.phone_sale %}
                                Mijoz: {{ form.instance.phone_sale.customer.name }} •
                                Tel: {{ form.instance.phone_sale.customer.phone_number|default:"Yo'q" }} •
                                Sana: {{ form.instance.phone_sale.sale_date|date:"d.m.Y" }} •
                                Sotuvchi: {{ form.instance.phone_sale.salesman.get_full_name|default:form.instance.phone_sale.salesman.username }}
                            {% endif %}
                        </p>
                    </div>
                    <button type="button" id="clearPhone" class="btn btn-outline-danger btn-sm">Tozalash</button>
                </div>
            </div>
        </div>

        <!-- Payment Calculation -->
        <div id="paymentCalc" class="payment-calc mb-3">
            <div class="row">
                <div class="col-md-4">
                    <label>Sotish narxi</label>
                    <p id="saleAmount">$0.00</p>
                </div>
                <div class="col-md-4">
                    <label>Qaytarish summasi</label>
                    <p id="returnAmount">$0.00</p>
                </div>
                <div class="col-md-4">
                    <label>Ferq</label>
                    <p id="difference">$0.00</p>
                </div>
            </div>
            <div class="mt-2">
                <label>Status</label>
                <p id="paymentStatus"><span class="badge bg-secondary">Telefon tanlanmadi</span></p>
            </div>
        </div>

        <!-- Form Fields -->
        <div class="mb-3">
            <label for="{{ form.return_amount.id_for_label }}" class="form-label">Qaytarish summasi</label>
            {{ form.return_amount }}
            {% if form.return_amount.errors %}
                <div class="text-danger">{{ form.return_amount.errors }}</div>
            {% endif %}
        </div>

        <div class="mb-3">
            <label for="{{ form.return_date.id_for_label }}" class="form-label">Qaytarish sanasi</label>
            {{ form.return_date }}
            {% if form.return_date.errors %}
                <div class="text-danger">{{ form.return_date.errors }}</div>
            {% endif %}
        </div>

        <div class="mb-3">
            <label for="{{ form.reason.id_for_label }}" class="form-label">Qaytarish sababi</label>
            {{ form.reason }}
