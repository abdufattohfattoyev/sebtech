{% block extra_js %}
<script>
document.addEventListener('DOMContentLoaded', function() {
    // Elementlarni to'g'ri ID lar bilan olish
    const elements = {
        imeiSearch: document.getElementById('imeiSearch'),
        searchResults: document.getElementById('searchResults'),
        selectedPhone: document.getElementById('selectedPhone'),
        phoneTitle: document.getElementById('phoneTitle'),
        phoneDetails: document.getElementById('phoneDetails'),
        phoneSaleInfo: document.getElementById('phoneSaleInfo'),
        phoneSaleInput: document.querySelector('input[name="phone_sale"]'),
        returnAmount: document.getElementById('id_return_amount'),
        returnDate: document.getElementById('id_return_date'),
        reason: document.getElementById('id_reason'),
        notes: document.getElementById('id_notes'),
        paymentCalc: document.getElementById('paymentCalc'),
        returnAmountDisplay: document.getElementById('returnAmount'),
        saleAmount: document.getElementById('saleAmount'),
        difference: document.getElementById('difference'),
        paymentStatus: document.getElementById('paymentStatus'),
        clearPhone: document.getElementById('clearPhone'),
        submitBtn: document.getElementById('submitBtn'),
        returnForm: document.getElementById('returnForm')
    };

    let searchTimeout, results = [], selectedIndex = -1;
    let currentPhoneSaleData = null;

    // Tahrirlash rejimi uchun boshlang'ich yuklash
    const initialPhoneSaleId = elements.phoneSaleInput.value;
    if (initialPhoneSaleId) {
        fetch(`/sales/api/get-phone-sale/${initialPhoneSaleId}/`, {
            headers: { 'X-Requested-With': 'XMLHttpRequest' }
        })
            .then(res => {
                if (!res.ok) throw new Error(`HTTP error! status: ${res.status}`);
                return res.json();
            })
            .then(data => {
                if (data.success) {
                    currentPhoneSaleData = data.sale;
                    displaySelectedPhoneSale(data.sale);
                    elements.imeiSearch.value = data.sale.imei || '';
                    calculateReturn();
                } else {
                    showAlert('Telefon sotuv ma\'lumotlari yuklanmadi: ' + (data.message || 'Xato'), 'danger');
                }
            })
            .catch(err => {
                console.error('Initial load error:', err);
                showAlert('Telefon sotuv ma\'lumotlari yuklanmadi: ' + err.message, 'danger');
            });
    }

    // IMEI qidirish
    elements.imeiSearch.addEventListener('input', function() {
        const query = this.value.trim();
        clearTimeout(searchTimeout);
        if (query.length < 3) {
            hideResults();
            return;
        }
        searchTimeout = setTimeout(() => searchPhoneSales(query), 300);
    });

    // Klaviatura navigatsiyasi
    elements.imeiSearch.addEventListener('keydown', function(e) {
        const items = elements.searchResults.children;
        switch(e.key) {
            case 'ArrowDown':
                e.preventDefault();
                selectedIndex = Math.min(selectedIndex + 1, items.length - 1);
                updateSelection();
                break;
            case 'ArrowUp':
                e.preventDefault();
                selectedIndex = Math.max(selectedIndex - 1, -1);
                updateSelection();
                break;
            case 'Enter':
                e.preventDefault();
                if (selectedIndex >= 0) selectPhoneSale(results[selectedIndex]);
                break;
            case 'Escape':
                hideResults();
                break;
        }
    });

    async function searchPhoneSales(query) {
        try {
            const response = await fetch(`/sales/api/search-phone-sale-by-imei/?q=${encodeURIComponent(query)}`, {
                headers: { 'X-Requested-With': 'XMLHttpRequest' }
            });
            if (!response.ok) throw new Error(`HTTP error! status: ${response.status}`);
            const data = await response.json();

            if (data.status === 'error') {
                showAlert(data.message || 'Qidirishda xatolik', 'danger');
                showResults([]);
                return;
            }

            results = data.data || [];
            showResults(results);

        } catch (e) {
            console.error('Search error:', e);
            showAlert('Qidirishda xatolik: ' + e.message, 'danger');
            showResults([]);
        }
    }

    function showResults(phoneSales) {
        selectedIndex = -1;
        if (phoneSales.length === 0) {
            elements.searchResults.innerHTML = '<div class="result-item text-muted">Qaytarish uchun telefon sotuvi topilmadi</div>';
        } else {
            elements.searchResults.innerHTML = phoneSales.map((sale, i) => `
                <div class="result-item" data-index="${i}">
                    <div class="result-title">${sale.display_text || 'Noma\'lum'}</div>
                    <div class="result-details">
                        Mijoz: ${sale.customer_name || 'Noma\'lum'} •
                        Tel: ${sale.customer_phone || 'Yo\'q'} •
                        Sotuvchi: ${sale.salesman || 'Noma\'lum'}
                    </div>
                </div>
            `).join('');

            elements.searchResults.querySelectorAll('.result-item').forEach((item, i) => {
                item.addEventListener('click', () => selectPhoneSale(phoneSales[i]));
            });
        }
        elements.searchResults.classList.add('show');
    }

    function hideResults() {
        elements.searchResults.classList.remove('show');
        selectedIndex = -1;
    }

    function updateSelection() {
        Array.from(elements.searchResults.children).forEach((item, i) => {
            item.classList.toggle('selected', i === selectedIndex);
        });
    }

    function displaySelectedPhoneSale(sale) {
        const phoneModel = `${sale.phone_model || ''} ${sale.memory || ''}`.trim();
        elements.phoneTitle.textContent = phoneModel || 'Model noma\'lum';
        elements.phoneDetails.textContent = `IMEI: ${sale.imei || 'N/A'}`;
        elements.phoneSaleInfo.textContent = `Mijoz: ${sale.customer_name || 'Noma\'lum'} • Tel: ${sale.customer_phone || 'Yo\'q'} • Sana: ${sale.sale_date || 'Noma\'lum'} • Sotuvchi: ${sale.salesman || 'Noma\'lum'}`;
        elements.selectedPhone.classList.add('show');

        if (!elements.returnAmount.value || elements.returnAmount.value == '0') {
            elements.returnAmount.value = sale.sale_price || '0';
        }

        calculateReturn();
    }

    function selectPhoneSale(sale) {
        elements.phoneSaleInput.value = sale.id;
        elements.imeiSearch.value = sale.imei || '';
        currentPhoneSaleData = sale;
        displaySelectedPhoneSale(sale);
        hideResults();
        showAlert(`Telefon sotuvi tanlandi: ${sale.phone_model || 'Noma\'lum'}`, 'success');
    }

    elements.clearPhone.addEventListener('click', function() {
        elements.phoneSaleInput.value = '';
        elements.imeiSearch.value = '';
        elements.selectedPhone.classList.remove('show');
        currentPhoneSaleData = null;
        elements.returnAmount.value = '0';
        calculateReturn();
        hideResults();
    });

    function calculateReturn() {
        const returnAmount = parseFloat(elements.returnAmount.value) || 0;
        const salePrice = currentPhoneSaleData ? parseFloat(currentPhoneSaleData.sale_price) || 0 : 0;
        const difference = salePrice - returnAmount;

        elements.returnAmountDisplay.textContent = '$' + returnAmount.toFixed(2);
        elements.saleAmount.textContent = '$' + salePrice.toFixed(2);
        elements.difference.textContent = '$' + difference.toFixed(2);

        if (!currentPhoneSaleData) {
            elements.paymentStatus.innerHTML = '<span class="badge bg-secondary">Telefon tanlanmadi</span>';
            elements.paymentCalc.className = 'payment-calc';
        } else if (returnAmount <= 0) {
            elements.paymentStatus.innerHTML = '<span class="badge bg-danger">Summa kiritilmadi</span>';
            elements.paymentCalc.className = 'payment-calc invalid';
        } else if (returnAmount > salePrice) {
            elements.paymentStatus.innerHTML = '<span class="badge bg-danger">Haddan tashqari</span>';
            elements.paymentCalc.className = 'payment-calc invalid';
        } else if (Math.abs(returnAmount - salePrice) < 0.01) {
            elements.paymentStatus.innerHTML = '<span class="badge bg-success">To\'liq qaytarish</span>';
            elements.paymentCalc.className = 'payment-calc valid';
        } else {
            elements.paymentStatus.innerHTML = '<span class="badge bg-warning">Qisman qaytarish</span>';
            elements.paymentCalc.className = 'payment-calc warning';
        }
    }

    function showAlert(msg, type) {
        const toast = document.createElement('div');
        toast.className = `alert alert-${type} alert-dismissible fade show position-fixed`;
        toast.style.cssText = 'top: 20px; right: 20px; z-index: 9999; min-width: 300px;';
        toast.innerHTML = `${msg}<button type="button" class="btn-close" data-bs-dismiss="alert"></button>`;
        document.body.appendChild(toast);
        setTimeout(() => toast.remove(), 5000);
    }

    elements.returnAmount.addEventListener('input', calculateReturn);
    elements.returnAmount.addEventListener('focus', function() {
        if (this.value === '0' || this.value === '0.00') {
            this.value = '';
        }
    });
    elements.returnAmount.addEventListener('blur', function() {
        if (this.value === '' || this.value === '.') {
            this.value = '0';
            calculateReturn();
        }
    });

    elements.returnForm.addEventListener('submit', function(e) {
        if (!elements.phoneSaleInput.value) {
            e.preventDefault();
            showAlert('IMEI bo\'yicha telefon sotuvini tanlash shart!', 'danger');
            elements.imeiSearch.focus();
            return;
        }

        const returnAmount = parseFloat(elements.returnAmount.value) || 0;
        const salePrice = currentPhoneSaleData ? parseFloat(currentPhoneSaleData.sale_price) || 0 : 0;

        if (returnAmount <= 0) {
            e.preventDefault();
            showAlert('Qaytarish summasi 0 dan katta bo\'lishi kerak!', 'danger');
            elements.returnAmount.focus();
            return;
        }

        if (returnAmount > salePrice) {
            e.preventDefault();
            showAlert(`Qaytarish summasi sotish narxidan (${salePrice}$) ko'p bo'lishi mumkin emas!`, 'danger');
            elements.returnAmount.focus();
            return;
        }

        if (!elements.reason.value.trim()) {
            e.preventDefault();
            showAlert('Qaytarish sababi kiritilishi shart!', 'danger');
            elements.reason.focus();
            return;
        }

        elements.submitBtn.innerHTML = '<span class="spinner-border spinner-border-sm"></span> Saqlanmoqda...';
        elements.submitBtn.disabled = true;
    });

    document.addEventListener('click', e => {
        if (!elements.imeiSearch.contains(e.target) && !elements.searchResults.contains(e.target)) {
            hideResults();
        }
    });

    calculateReturn();
});
</script>
{% endblock %}