{% block extra_js %}
<script>
document.addEventListener('DOMContentLoaded', function() {
    const elements = {
        imeiSearch: document.getElementById('imeiSearch'),
        searchResults: document.getElementById('searchResults'),
        selectedPhone: document.getElementById('selectedPhone'),
        phoneTitle: document.getElementById('phoneTitle'),
        phoneDetails: document.getElementById('phoneDetails'),
        phoneSaleInfo: document.getElementById('phoneSaleInfo'),
        phoneSaleInput: document.querySelector('input[name="phone_sale"]'),
        returnAmount: document.getElementById('id_return_amount'),
        returnAmountDisplay: document.getElementById('returnAmountDisplay'),
        saleAmount: document.getElementById('saleAmount'),
        difference: document.getElementById('difference'),
        paymentStatus: document.getElementById('paymentStatus'),
        paymentCalc: document.getElementById('paymentCalc'),
        formFields: document.getElementById('formFields'),
        clearPhone: document.getElementById('clearPhone'),
        submitBtn: document.getElementById('submitBtn'),
        returnForm: document.getElementById('returnForm')
    };

    let searchTimeout, results = [], selectedIndex = -1;
    let currentPhoneSaleData = null;

    // IMEI qidirish
    elements.imeiSearch.addEventListener('input', function() {
        const query = this.value.trim();
        clearTimeout(searchTimeout);
        
        if (query.length < 3) {
            hideResults();
            return;
        }
        
        searchTimeout = setTimeout(() => searchPhoneSales(query), 300);
    });

    // Klaviatura navigatsiyasi
    elements.imeiSearch.addEventListener('keydown', function(e) {
        const items = elements.searchResults.querySelectorAll('.result-item');
        
        switch(e.key) {
            case 'ArrowDown':
                e.preventDefault();
                selectedIndex = Math.min(selectedIndex + 1, items.length - 1);
                updateSelection();
                break;
            case 'ArrowUp':
                e.preventDefault();
                selectedIndex = Math.max(selectedIndex - 1, -1);
                updateSelection();
                break;
            case 'Enter':
                e.preventDefault();
                if (selectedIndex >= 0 && results[selectedIndex]) {
                    selectPhoneSale(results[selectedIndex]);
                }
                break;
            case 'Escape':
                hideResults();
                break;
        }
    });

    async function searchPhoneSales(query) {
        try {
            const response = await fetch(
                `/sales/api/search-phone-sale-by-imei/?q=${encodeURIComponent(query)}`,
                { headers: { 'X-Requested-With': 'XMLHttpRequest' } }
            );

            if (!response.ok) {
                throw new Error(`HTTP xato! status: ${response.status}`);
            }

            const data = await response.json();
            results = data.data || [];
            showResults(results);

        } catch (e) {
            console.error('Qidiruv xatosi:', e);
            showResults([]);
        }
    }

    function showResults(phoneSales) {
        selectedIndex = -1;
        
        if (phoneSales.length === 0) {
            elements.searchResults.innerHTML = `
                <div class="no-results">
                    <i class="fas fa-search text-muted mb-2" style="font-size: 2em;"></i>
                    <p class="mb-0">Sotilgan telefon topilmadi</p>
                </div>
            `;
        } else {
            elements.searchResults.innerHTML = phoneSales.map((sale, i) => `
                <div class="result-item" data-index="${i}">
                    <div class="result-title">
                        ${sale.phone_model} ${sale.memory} - IMEI: ${sale.imei}
                    </div>
                    <div class="result-details">
                        üìÖ ${sale.sale_date} ‚Ä¢ 
                        üë§ ${sale.customer_name} ‚Ä¢ 
                        üìû ${sale.customer_phone || 'Yo\'q'} ‚Ä¢ 
                        üí∞ $${sale.sale_price}
                    </div>
                </div>
            `).join('');

            elements.searchResults.querySelectorAll('.result-item').forEach((item, i) => {
                item.addEventListener('click', () => selectPhoneSale(phoneSales[i]));
            });
        }
        
        elements.searchResults.classList.add('show');
    }

    function hideResults() {
        elements.searchResults.classList.remove('show');
        selectedIndex = -1;
    }

    function updateSelection() {
        elements.searchResults.querySelectorAll('.result-item').forEach((item, i) => {
            item.classList.toggle('selected', i === selectedIndex);
            if (i === selectedIndex) {
                item.scrollIntoView({ block: 'nearest', behavior: 'smooth' });
            }
        });
    }

    function selectPhoneSale(sale) {
        currentPhoneSaleData = sale;
        elements.phoneSaleInput.value = sale.id;
        elements.imeiSearch.value = sale.imei;
        
        // Telefon ma'lumotlarini ko'rsatish
        elements.phoneTitle.textContent = `${sale.phone_model} ${sale.memory}`;
        elements.phoneDetails.textContent = `IMEI: ${sale.imei}`;
        elements.phoneSaleInfo.innerHTML = `
            <strong>Mijoz:</strong> ${sale.customer_name}<br>
            <strong>Telefon:</strong> ${sale.customer_phone || 'Yo\'q'}<br>
            <strong>Sotish sanasi:</strong> ${sale.sale_date}<br>
            <strong>Sotuvchi:</strong> ${sale.salesman}<br>
            <strong>Sotish narxi:</strong> $${sale.sale_price}
        `;
        
        // Default qaytarish summasi - to'liq narx
        if (!elements.returnAmount.value || parseFloat(elements.returnAmount.value) === 0) {
            elements.returnAmount.value = sale.sale_price;
        }
        
        // Ko'rsatish
        elements.selectedPhone.style.display = 'block';
        elements.paymentCalc.style.display = 'block';
        elements.formFields.style.display = 'block';
        
        hideResults();
        calculateReturn();
        updateSubmitButton();
        
        showToast('Telefon tanlandi', 'success');
    }

    elements.clearPhone.addEventListener('click', function() {
        currentPhoneSaleData = null;
        elements.phoneSaleInput.value = '';
        elements.imeiSearch.value = '';
        elements.returnAmount.value = '0';
        
        elements.selectedPhone.style.display = 'none';
        elements.paymentCalc.style.display = 'none';
        elements.formFields.style.display = 'none';
        
        updateSubmitButton();
        hideResults();
    });

    function calculateReturn() {
        if (!currentPhoneSaleData) {
            elements.paymentStatus.innerHTML = '<span class="badge bg-secondary">Telefon tanlanmadi</span>';
            return;
        }

        const returnAmount = parseFloat(elements.returnAmount.value) || 0;
        const salePrice = parseFloat(currentPhoneSaleData.sale_price) || 0;
        const difference = salePrice - returnAmount;

        elements.returnAmountDisplay.textContent = '$' + returnAmount.toFixed(2);
        elements.saleAmount.textContent = '$' + salePrice.toFixed(2);
        elements.difference.textContent = '$' + Math.abs(difference).toFixed(2);

        if (returnAmount <= 0) {
            elements.paymentStatus.innerHTML = '<span class="badge bg-danger">‚ùå Summa kiritilmadi</span>';
        } else if (returnAmount > salePrice) {
            elements.paymentStatus.innerHTML = '<span class="badge bg-danger">‚ùå Haddan tashqari</span>';
        } else if (Math.abs(returnAmount - salePrice) < 0.01) {
            elements.paymentStatus.innerHTML = '<span class="badge bg-success">‚úÖ To\'liq qaytarish</span>';
        } else {
            elements.paymentStatus.innerHTML = '<span class="badge bg-warning text-dark">‚ö†Ô∏è Qisman qaytarish</span>';
        }

        updateSubmitButton();
    }

    function updateSubmitButton() {
        const hasPhone = !!currentPhoneSaleData;
        const hasAmount = parseFloat(elements.returnAmount.value) > 0;
        const salePrice = currentPhoneSaleData ? parseFloat(currentPhoneSaleData.sale_price) : 0;
        const returnAmount = parseFloat(elements.returnAmount.value) || 0;
        const validAmount = returnAmount > 0 && returnAmount <= salePrice;

        elements.submitBtn.disabled = !(hasPhone && validAmount);
    }

    elements.returnAmount.addEventListener('input', function() {
        calculateReturn();
    });

    // Form validation
    elements.returnForm.addEventListener('submit', function(e) {
        if (!elements.phoneSaleInput.value) {
            e.preventDefault();
            showToast('Telefon tanlanmagan!', 'danger');
            elements.imeiSearch.focus();
            return;
        }

        const returnAmount = parseFloat(elements.returnAmount.value) || 0;
        const salePrice = currentPhoneSaleData ? parseFloat(currentPhoneSaleData.sale_price) : 0;

        if (returnAmount <= 0) {
            e.preventDefault();
            showToast('Qaytarish summasi 0 dan katta bo\'lishi kerak!', 'danger');
            elements.returnAmount.focus();
            return;
        }

        if (returnAmount > salePrice) {
            e.preventDefault();
            showToast(`Qaytarish summasi ${salePrice}$ dan oshmasligi kerak!`, 'danger');
            elements.returnAmount.focus();
            return;
        }

        const reason = document.getElementById('id_reason').value.trim();
        if (!reason) {
            e.preventDefault();
            showToast('Qaytarish sababi kiritilishi shart!', 'danger');
            document.getElementById('id_reason').focus();
            return;
        }

        elements.submitBtn.innerHTML = '<span class="spinner-border spinner-border-sm me-2"></span>Saqlanmoqda...';
        elements.submitBtn.disabled = true;
    });

    function showToast(message, type) {
        const toast = document.createElement('div');
        toast.className = `alert alert-${type} alert-dismissible fade show position-fixed`;
        toast.style.cssText = 'top: 20px; right: 20px; z-index: 9999; min-width: 300px;';
        toast.innerHTML = `
            ${message}
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        `;
        document.body.appendChild(toast);
        setTimeout(() => toast.remove(), 5000);
    }

    // Click tashqarida yashirish
    document.addEventListener('click', function(e) {
        if (!elements.imeiSearch.contains(e.target) && 
            !elements.searchResults.contains(e.target)) {
            hideResults();
        }
    });
});
</script>
{% endblock %}