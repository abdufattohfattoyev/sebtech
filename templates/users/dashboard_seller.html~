<!-- Chart.js -->
<script src="https://cdn.jsdelivr.net/npm/chart.js@4.4.0/dist/chart.umd.min.js"></script>

{% if seller_data %}
<script>
document.addEventListener('DOMContentLoaded', function() {
  const daysInMonth = {{ daily_sales_data|length }};
  const dayLabels = Array.from({length: daysInMonth}, (_, i) => i + 1);
  const monthLabels = ['Yan', 'Fev', 'Mar', 'Apr', 'May', 'Iyun', 'Iyul', 'Avg', 'Sen', 'Okt', 'Noy', 'Dek'];

  // Kunlik Sotuvlar Soni
  const dailyCountCtx = document.getElementById('dailyCountChart');
  if (dailyCountCtx) {
    new Chart(dailyCountCtx, {
      type: 'bar',
      data: {
        labels: dayLabels,
        datasets: [{
          label: 'Telefon',
          data: {{ seller_data.charts.daily_phone|safe }},
          backgroundColor: '#10b981'
        }, {
          label: 'Aksessuar',
          data: {{ seller_data.charts.daily_accessory|safe }},
          backgroundColor: '#3b82f6'
        }]
      },
      options: {
        responsive: true,
        maintainAspectRatio: false,
        plugins: { legend: { position: 'top' } },
        scales: {
          y: { beginAtZero: true, grid: { color: 'rgba(0,0,0,0.05)' } },
          x: { grid: { display: false }, ticks: { maxRotation: 45 } }
        }
      }
    });
  }

  // Kunlik Telefon Foydasi
  const dailyPhoneProfitCtx = document.getElementById('dailyPhoneProfitChart');
  if (dailyPhoneProfitCtx) {
    new Chart(dailyPhoneProfitCtx, {
      type: 'line',
      data: {
        labels: dayLabels,
        datasets: [{
          label: 'Telefon Foydasi',
          data: {{ seller_data.charts.daily_phone|safe }},  // Foyda uchun view ni yangilang yoki count ishlat
          borderColor: '#f59e0b',
          backgroundColor: 'rgba(245, 158, 11, 0.1)',
          fill: true,
          tension: 0.4
        }]
      },
      options: {
        responsive: true,
        maintainAspectRatio: false,
        plugins: { legend: { position: 'top' } },
        scales: {
          y: { beginAtZero: true, grid: { color: 'rgba(0,0,0,0.05)' } },
          x: { grid: { display: false }, ticks: { maxRotation: 45 } }
        }
      }
    });
  }

  // Kunlik Aksessuar Foydasi
  const dailyAccessoryProfitCtx = document.getElementById('dailyAccessoryProfitChart');
  if (dailyAccessoryProfitCtx) {
    new Chart(dailyAccessoryProfitCtx, {
      type: 'line',
      data: {
        labels: dayLabels,
        datasets: [{
          label: 'Aksessuar Foydasi',
          data: {{ seller_data.charts.daily_accessory|safe }},  // Foyda uchun view ni yangilang yoki count ishlat
          borderColor: '#ef4444',
          backgroundColor: 'rgba(239, 68, 68, 0.1)',
          fill: true,
          tension: 0.4
        }]
      },
      options: {
        responsive: true,
        maintainAspectRatio: false,
        plugins: { legend: { position: 'top' } },
        scales: {
          y: { beginAtZero: true, grid: { color: 'rgba(0,0,0,0.05)' } },
          x: { grid: { display: false }, ticks: { maxRotation: 45 } }
        }
      }
    });
  }

  // Oylik Sotuvlar Soni
  const yearlyCountCtx = document.getElementById('yearlyCountChart');
  if (yearlyCountCtx) {
    new Chart(yearlyCountCtx, {
      type: 'bar',
      data: {
        labels: monthLabels,
        datasets: [{
          label: 'Telefon',
          data: {{ seller_data.charts.monthly_phone|safe }},
          backgroundColor: '#10b981'
        }, {
          label: 'Aksessuar',
          data: {{ seller_data.charts.monthly_accessory|safe }},
          backgroundColor: '#3b82f6'
        }]
      },
      options: {
        responsive: true,
        maintainAspectRatio: false,
        plugins: { legend: { position: 'top' } },
        scales: { y: { beginAtZero: true }, x: { grid: { display: false } } }
      }
    });
  }

  // Oylik Telefon Foydasi
  const yearlyPhoneProfitCtx = document.getElementById('yearlyPhoneProfitChart');
  if (yearlyPhoneProfitCtx) {
    new Chart(yearlyPhoneProfitCtx, {
      type: 'line',
      data: {
        labels: monthLabels,
        datasets: [{
          label: 'Telefon Foydasi',
          data: {{ seller_data.charts.monthly_phone_profit|safe }},
          borderColor: '#f59e0b',
          backgroundColor: 'rgba(245, 158, 11, 0.1)',
          borderWidth: 3,
          tension: 0.4,
          fill: true,
          pointRadius: 5,
          pointHoverRadius: 7
        }]
      },
      options: {
        responsive: true,
        maintainAspectRatio: false,
        plugins: {
          legend: { display: false },
          tooltip: {
            callbacks: {
              label: function(context) {
                return 'Foyda: $' + context.parsed.y.toLocaleString();
              }
            }
          }
        },
        scales: {
          y: {
            beginAtZero: true,
            grid: { color: 'rgba(0,0,0,0.05)' },
            ticks: {
              callback: function(value) {
                return '$' + value.toLocaleString();
              }
            }
          },
          x: { grid: { display: false } }
        }
      }
    });
  }

  // Oylik Aksessuar Foydasi
  const yearlyAccessoryProfitCtx = document.getElementById('yearlyAccessoryProfitChart');
  if (yearlyAccessoryProfitCtx) {
    new Chart(yearlyAccessoryProfitCtx, {
      type: 'line',
      data: {
        labels: monthLabels,
        datasets: [{
          label: 'Aksessuar Foydasi',
          data: {{ seller_data.charts.monthly_accessory_profit|safe }},
          borderColor: '#ef4444',
          backgroundColor: 'rgba(239, 68, 68, 0.1)',
          borderWidth: 3,
          tension: 0.4,
          fill: true,
          pointRadius: 5,
          pointHoverRadius: 7
        }]
      },
      options: {
        responsive: true,
        maintainAspectRatio: false,
        plugins: {
          legend: { display: false },
          tooltip: {
            callbacks: {
              label: function(context) {
                return 'Foyda: ' + context.parsed.y.toLocaleString() + ' so\'m';
              }
            }
          }
        },
        scales: {
          y: {
            beginAtZero: true,
            grid: { color: 'rgba(0,0,0,0.05)' },
            ticks: {
              callback: function(value) {
                return value.toLocaleString() + ' so\'m';
              }
            }
          },
          x: { grid: { display: false } }
        }
      }
    });
  }
});
