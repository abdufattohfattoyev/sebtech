{% block extra_scripts %}
<script>
    // Bootstrap validation
    (function () {
        'use strict'
        var forms = document.querySelectorAll('.needs-validation')
        Array.prototype.slice.call(forms)
            .forEach(function (form) {
                form.addEventListener('submit', function (event) {
                    if (!form.checkValidity()) {
                        event.preventDefault()
                        event.stopPropagation()
                    }
                    form.classList.add('was-validated')
                }, false)
            })
    })()

    // Dynamic new source form
    document.getElementById('add-new-source').addEventListener('click', function() {
        document.getElementById('new-source-form').style.display = 'block';
        this.style.display = 'none';
    });

    document.getElementById('save-new-source').addEventListener('click', function() {
        var firstName = document.getElementById('id_new_first_name').value;
        var lastName = document.getElementById('id_new_last_name').value;
        var phoneNumber = document.getElementById('id_new_phone_number').value;
        var sourceType = document.querySelector('#id_source_type').value;

        if (firstName && lastName && phoneNumber) {
            // This is a placeholder - you would typically use AJAX to save to the database
            alert('Yangi ' + (sourceType === 'supplier' ? 'Taminotchi' : 'Mijoz') + ' saqlandi: ' + firstName + ' ' + lastName);
            document.getElementById('new-source-form').style.display = 'none';
            document.getElementById('add-new-source').style.display = 'inline';
            // Reset fields
            document.getElementById('id_new_first_name').value = '';
            document.getElementById('id_new_last_name').value = '';
            document.getElementById('id_new_phone_number').value = '';
        } else {
            alert('Iltimos, barcha maydonlarni to\'ldiring!');
        }
    });
</script>
{% endblock %}