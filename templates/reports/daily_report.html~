<script>
function showTab(index, btn) {
  document.querySelectorAll('.tab').forEach(t => t.classList.remove('active'));
  document.querySelectorAll('.tab-content').forEach(c => c.classList.remove('active'));
  btn.classList.add('active');
  document.querySelectorAll('.tab-content')[index].classList.add('active');
}

function goToSeller(id) {
  const params = new URLSearchParams(window.location.search);
  location.href = "{% url 'reports:seller_detail_page' 999 %}".replace('999', id) + '?' + params;
}

// So'm formatlash
document.addEventListener('DOMContentLoaded', function() {
  document.querySelectorAll('.stat-value.blue, .sale-price.uzs, .seller-amounts div, .cf-value, .kassa-value').forEach(el => {
    let text = el.textContent.trim();
    let num = text.replace(/[^\d]/g, '');
    if (num && !text.includes('$')) {
      let formatted = num.replace(/\B(?=(\d{3})+(?!\d))/g, ' ');
      if (text.includes('so\'m')) {
        el.textContent = formatted + ' so\'m';
      } else {
        el.textContent = formatted;
      }
    }
  });
});
</script>
{% endblock %}