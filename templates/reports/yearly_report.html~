<script>
const monthlyData = [];
{% for monthly in yearly_stats.monthly_stats %}
monthlyData.push({
  month: '{{ month_names|get_item:monthly.month|default:monthly.month|escapejs }}-oy',
  phoneSales: parseFloat('{{ monthly.totals.phone_sales_usd|default:0 }}') || 0,
  phoneCash: parseFloat('{{ monthly.totals.phone_cash_usd|default:0 }}') || 0,
  phoneProfit: parseFloat('{{ monthly.profits.phone_profit|default:0 }}') || 0,
  accessorySales: parseFloat('{{ monthly.totals.accessory_sales_uzs|default:0 }}') || 0,
  accessoryCash: parseFloat('{{ monthly.totals.accessory_cash_uzs|default:0 }}') || 0,
  accessoryProfit: parseFloat('{{ monthly.profits.accessory_profit|default:0 }}') || 0,
  phoneCount: parseInt('{{ monthly.counts.phone|default:0 }}') || 0,
  accessoryCount: parseInt('{{ monthly.counts.accessory|default:0 }}') || 0
});
{% endfor %}

const data = {
  labels: monthlyData.map(d => d.month),
  datasets: [
    {
      label: 'Telefon Savdo ($)',
      data: monthlyData.map(d => d.phoneSales),
      borderColor: '#10b981',
      backgroundColor: 'rgba(16,185,129,0.1)',
      tension: 0.4,
      borderWidth: 2,
      yAxisID: 'y'
    },
    {
      label: 'Telefon Naqd ($)',
      data: monthlyData.map(d => d.phoneCash),
      borderColor: '#059669',
      borderDash: [5,5],
      tension: 0.4,
      borderWidth: 2,
      yAxisID: 'y'
    },
    {
      label: 'Aksessuar Savdo (so\'m)',
      data: monthlyData.map(d => d.accessorySales),
      borderColor: '#3b82f6',
      backgroundColor: 'rgba(59,130,246,0.1)',
      tension: 0.4,
      borderWidth: 2,
      yAxisID: 'y1'
    },
    {
      label: 'Aksessuar Naqd (so\'m)',
      data: monthlyData.map(d => d.accessoryCash),
      borderColor: '#2563eb',
      borderDash: [5,5],
      tension: 0.4,
      borderWidth: 2,
      yAxisID: 'y1'
    }
  ]
};

new Chart(document.getElementById('chart'), {
  type: 'line',
  data: data,
  options: {
    responsive: true,
    maintainAspectRatio: false,
    interaction: { mode: 'index', intersect: false },
    plugins: {
      legend: { position: 'top' },
      tooltip: {
        callbacks: {
          label: ctx => {
            const label = ctx.dataset.label;
            const value = ctx.parsed.y;
            return label.includes('so\'m') ?
              `${label}: ${value.toLocaleString('uz-UZ')} so'm` :
              `${label}: ${value.toFixed(2)}`;
          }
        }
      }
    },
    scales: {
      y: {
        type: 'linear',
        position: 'left',
        beginAtZero: true,
        ticks: { color: '#10b981' },
        title: { display: true, text: 'Dollar ($)', color: '#10b981' }
      },
      y1: {
        type: 'linear',
        position: 'right',
        beginAtZero: true,
        grid: { drawOnChartArea: false },
        ticks: {
          color: '#3b82f6',
          callback: v => (v/1000).toFixed(0) + 'K'
        },
        title: { display: true, text: 'So\'m (ming)', color: '#3b82f6' }
      }
    }
  }
});
</script>
{% endblock %}