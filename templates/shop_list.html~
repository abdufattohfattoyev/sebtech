{% block extra_js %}
<!-- Chart.js -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/chart.js/3.9.1/chart.min.js"></script>

<script>
    // Phone Status Pie Chart
    const phoneStatusCtx = document.getElementById('phoneStatusChart').getContext('2d');
    const phoneStatusChart = new Chart(phoneStatusCtx, {
        type: 'doughnut',
        data: {
            labels: ['Mavjud', 'Sotilgan'],
            datasets: [{
                data: [{{ available_phones }}, {{ sold_phones }}],
                backgroundColor: ['#10b981', '#ef4444'],
                borderWidth: 0
            }]
        },
        options: {
            responsive: true,
            maintainAspectRatio: false,
            plugins: {
                legend: {
                    position: 'bottom'
                }
            }
        }
    });

    // Monthly Chart
    const monthlyCtx = document.getElementById('monthlyChart').getContext('2d');
    const monthlyChart = new Chart(monthlyCtx, {
        type: 'line',
        data: {
            labels: ['Yanvar', 'Fevral', 'Mart', 'Aprel', 'May', 'Iyun'],
            datasets: [{
                label: 'Telefonlar',
                data: [{{ phones_this_month }}, {{ phones_this_week }}, {{ phones_today }}, 0, 0, 0],
                borderColor: '#2563eb',
                backgroundColor: 'rgba(37, 99, 235, 0.1)',
                fill: true,
                tension: 0.4
            }, {
                label: 'Aksessuarlar',
                data: [{{ accessories_this_month }}, {{ accessories_this_week }}, {{ accessories_today }}, 0, 0, 0],
                borderColor: '#10b981',
                backgroundColor: 'rgba(16, 185, 129, 0.1)',
                fill: true,
                tension: 0.4
            }]
        },
        options: {
            responsive: true,
            maintainAspectRatio: false,
            plugins: {
                legend: {
                    position: 'bottom'
                }
            },
            scales: {
                y: {
                    beginAtZero: true
                }
            }
        }
    });

    // Animate percentage bars
    document.addEventListener('DOMContentLoaded', function() {
        setTimeout(() => {
            const progressBars = document.querySelectorAll('.percentage-fill');
            progressBars.forEach(bar => {
                const width = bar.style.width;
                bar.style.width = '0%';
                setTimeout(() => {
                    bar.style.width = width;
                }, 100);
            });
        }, 500);
    });

    // Real-time updates (optional - for future implementation)
    function updateStats() {
        // This would fetch updated stats via AJAX
        console.log('Updating stats...');
    }

    // Update stats every 5 minutes
    setInterval(updateStats, 300000);
</script>
{% endblock %}