{% block extra_js %}
<script>
document.addEventListener('DOMContentLoaded', function() {
    const paymentAmountInput = document.getElementById('{{ form.payment_amount.id_for_label }}');
    const maxAmountBtn = document.getElementById('maxAmountBtn');
    const maxAmount = {{ service.remaining_amount }};
    
    // Maksimal summa tugmasi
    maxAmountBtn.addEventListener('click', function() {
        paymentAmountInput.value = maxAmount.toFixed(2);
        paymentAmountInput.focus();
    });

    // To'lov summasi validatsiyasi
    paymentAmountInput.addEventListener('input', function() {
        const value = parseFloat(this.value) || 0;
        
        // Maksimal qiymatdan oshib ketganini tekshirish
        if (value > maxAmount) {
            this.value = maxAmount.toFixed(2);
        }
        
        // Manfiy qiymatni oldini olish
        if (value < 0) {
            this.value = '';
        }
    });

    // Form validatsiyasi
    const form = document.getElementById('paymentForm');
    form.addEventListener('submit', function(e) {
        let isValid = true;
        
        // Clear previous errors
        document.querySelectorAll('.is-invalid').forEach(el => {
            el.classList.remove('is-invalid');
        });
        
        // Validate payment amount
        const paymentAmount = parseFloat(paymentAmountInput.value) || 0;
        if (paymentAmount <= 0) {
            paymentAmountInput.classList.add('is-invalid');
            isValid = false;
        } else if (paymentAmount > maxAmount) {
            paymentAmountInput.classList.add('is-invalid');
            isValid = false;
        }
        
        // Validate payment date
        const paymentDate = document.getElementById('{{ form.payment_date.id_for_label }}');
        if (!paymentDate.value) {
            paymentDate.classList.add('is-invalid');
            isValid = false;
        }
        
        if (!isValid) {
            e.preventDefault();
            const firstInvalid = document.querySelector('.is-invalid');
            if (firstInvalid) {
                firstInvalid.focus();
                firstInvalid.scrollIntoView({ behavior: 'smooth', block: 'center' });
            }
        } else {
            // Loading animation
            const submitBtn = this.querySelector('button[type="submit"]');
            submitBtn.innerHTML = '<i class="fas fa-spinner fa-spin me-2"></i>Saqlanmoqda...';
            submitBtn.disabled = true;
        }
    });

    // Bugüngi sanani o'rnatish
    const paymentDate = document.getElementById('{{ form.payment_date.id_for_label }}');
    if (!paymentDate.value) {
        const today = new Date().toISOString().split('T')[0];
        paymentDate.value = today;
    }

    // Auto-focus payment amount input
    paymentAmountInput.focus();
    
    // Delete confirmation function
    {% if payment %}
    window.confirmDelete = function() {
        if (confirm('Bu to\'lovni o\'chirishni tasdiqlaysizmi?\nBu amalni bekor qilish mumkin emas!')) {
            // Form yaratish va yuborish
            const form = document.createElement('form');
            form.method = 'POST';
            form.action = '{% url "services:payment_delete" payment.pk %}';

            const csrfInput = document.createElement('input');
            csrfInput.type = 'hidden';
            csrfInput.name = 'csrfmiddlewaretoken';
            csrfInput.value = getCookie('csrftoken');
            form.appendChild(csrfInput);

            document.body.appendChild(form);
            form.submit();
        }
    };
    {% endif %}

    // CSRF token olish
    function getCookie(name) {
        let cookieValue = null;
        if (document.cookie && document.cookie !== '') {
            const cookies = document.cookie.split(';');
            for (let i = 0; i < cookies.length; i++) {
                const cookie = cookies[i].trim();
                if (cookie.substring(0, name.length + 1) === (name + '=')) {
                    cookieValue = decodeURIComponent(cookie.substring(name.length + 1));
                    break;
                }
            }
        }
        return cookieValue;
    }

    // Quick amount buttons
    const quickAmountsContainer = document.createElement('div');
    quickAmountsContainer.className = 'mt-2';
    
    // Common payment amounts based on remaining amount
    const quickAmounts = [];
    if (maxAmount >= 10) {
        if (maxAmount >= 100) quickAmounts.push(100);
        if (maxAmount >= 50) quickAmounts.push(50);
        if (maxAmount >= 20) quickAmounts.push(20);
        if (maxAmount >= 10) quickAmounts.push(10);
    }
    quickAmounts.push(Math.floor(maxAmount)); // Full amount
    
    quickAmounts.forEach(amount => {
        if (amount <= maxAmount && amount > 0) {
            const btn = document.createElement('button');
            btn.type = 'button';
            btn.className = 'btn btn-outline-primary btn-sm me-1 mb-1';
            btn.textContent = `${amount}`;
            btn.addEventListener('click', function() {
                paymentAmountInput.value = amount.toFixed(2);
                paymentAmountInput.focus();
            });
            quickAmountsContainer.appendChild(btn);
        }
    });
    
    if (quickAmountsContainer.children.length > 0) {
        const label = document.createElement('small');
        label.className = 'text-muted';
        label.textContent = 'Tez tanlash: ';
        quickAmountsContainer.insertBefore(label, quickAmountsContainer.firstChild);
        
        paymentAmountInput.parentNode.parentNode.appendChild(quickAmountsContainer);
    }
});
</script>
{% endblock %}