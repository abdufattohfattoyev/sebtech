{% block extra_js %}
<script>
document.addEventListener('DOMContentLoaded', function() {
    let currentServiceId = null;

    window.showStatusUpdateModal = function(serviceId) {
        currentServiceId = serviceId;
        const modal = new bootstrap.Modal(document.getElementById('statusUpdateModal'), {
            backdrop: 'static',
            keyboard: false
        });
        const confirmBtn = document.getElementById('confirmStatusUpdate');
        confirmBtn.disabled = false;
        confirmBtn.querySelector('.fa-spinner').classList.add('d-none');
        modal.show();
    };

    document.getElementById('confirmStatusUpdate').addEventListener('click', function() {
        if (!currentServiceId) return;

        const confirmBtn = this;
        confirmBtn.disabled = true;
        confirmBtn.querySelector('.fa-spinner').classList.remove('d-none');

        fetch("{% url 'services:service_update_status' 0 %}".replace('0', currentServiceId), {
            method: 'POST',
            headers: {
                'Content-Type': 'application/x-www-form-urlencoded',
                'X-CSRFToken': '{{ csrf_token }}',
                'X-Requested-With': 'XMLHttpRequest'
            },
            body: `status=completed`
        })
        .then(response => response.json())
        .then(data => {
            const modal = bootstrap.Modal.getInstance(document.getElementById('statusUpdateModal'));
            modal.hide();
            confirmBtn.disabled = false;
            confirmBtn.querySelector('.fa-spinner').classList.add('d-none');

            const toast = document.createElement('div');
            toast.className = 'toast position-fixed bottom-0 end-0 m-3';
            toast.innerHTML = `
                <div class="toast-header ${data.success ? 'bg-success' : 'bg-danger'} text-white">
                    <i class="fas ${data.success ? 'fa-check-circle' : 'fa-exclamation-triangle'} me-2"></i>
                    <strong class="me-auto">${data.success ? 'Muvaffaqiyat' : 'Xatolik'}</strong>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="toast"></button>
                </div>
                <div class="toast-body">${data.message}</div>
            `;
            document.body.appendChild(toast);
            const bsToast = new bootstrap.Toast(toast);
            bsToast.show();
            setTimeout(() => toast.remove(), 3000);

            if (data.success) {
                vibrate([10]);
                setTimeout(() => location.reload(), 1500);
            } else {
                vibrate([20, 20, 20]);
            }
        })
        .catch(error => {
            console.error('Error:', error);
            const modal = bootstrap.Modal.getInstance(document.getElementById('statusUpdateModal'));
            modal.hide();
            confirmBtn.disabled = false;
            confirmBtn.querySelector('.fa-spinner').classList.add('d-none');

            const toast = document.createElement('div');
            toast.className = 'toast position-fixed bottom-0 end-0 m-3';
            toast.innerHTML = `
                <div class="toast-header bg-danger text-white">
                    <i class="fas fa-exclamation-triangle me-2"></i>
                    <strong class="me-auto">Xatolik</strong>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="toast"></button>
                </div>
                <div class="toast-body">Server bilan aloqada xatolik yuz berdi.</div>
            `;
            document.body.appendChild(toast);
            const bsToast = new bootstrap.Toast(toast);
            bsToast.show();
            setTimeout(() => toast.remove(), 3000);
            vibrate([20, 20, 20]);
        });
    });
});
</script>
{% endblock %}