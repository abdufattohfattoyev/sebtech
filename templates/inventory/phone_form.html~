<script>
document.addEventListener('DOMContentLoaded', function() {
    const sourceType = document.getElementById('id_source_type');
    const supplierField = document.getElementById('supplier_field');
    const externalSellerField = document.getElementById('external_seller_field');
    const dailySellerField = document.getElementById('daily_seller_field');
    const exchangeField = document.getElementById('exchange_field');

    // External Seller elements
    const externalSellerSelect = document.getElementById('id_external_seller');
    const externalSellerName = document.getElementById('id_external_seller_name');
    const externalSellerPhone = document.getElementById('id_external_seller_phone');
    const externalPhoneCheck = document.getElementById('external_phone_check');

    // Daily Seller elements
    const dailySellerSelect = document.getElementById('id_daily_seller');
    const dailySellerName = document.getElementById('id_daily_seller_name');
    const dailySellerPhone = document.getElementById('id_daily_seller_phone');
    const dailyPhoneCheck = document.getElementById('daily_phone_check');

    // Toggle fields based on source type
    function toggleFields() {
        const value = sourceType.value;

        // Hide all fields
        supplierField.style.display = 'none';
        externalSellerField.style.display = 'none';
        dailySellerField.style.display = 'none';
        exchangeField.style.display = 'none';

        // Show relevant field
        if (value === 'supplier') {
            supplierField.style.display = 'block';
        } else if (value === 'external_seller') {
            externalSellerField.style.display = 'block';
        } else if (value === 'daily_seller') {
            dailySellerField.style.display = 'block';
        } else if (value === 'exchange') {
            exchangeField.style.display = 'block';
        }
    }

    // Phone validation for External Seller
    let externalPhoneTimeout;
    function checkExternalPhone() {
        const phone = externalSellerPhone.value.trim();

        if (phone.length < 7) {
            externalPhoneCheck.innerHTML = '';
            return;
        }

        externalPhoneCheck.innerHTML = '<small class="text-muted">Tekshirilmoqda...</small>';

        fetch(`/inventory/check-seller-phone/?phone=${encodeURIComponent(phone)}`)
            .then(r => r.json())
            .then(data => {
                if (data.exists) {
                    externalPhoneCheck.innerHTML = `
                        <div class="alert alert-warning py-1 px-2 mt-1">
                            <small><strong>Mavjud:</strong> ${data.seller.name}</small>
                            <button type="button" class="btn btn-sm btn-primary ms-2"
                                    onclick="selectExternalSeller(${data.seller.id}, '${data.seller.name}')">
                                Tanlash
                            </button>
                        </div>
                    `;
                } else {
                    externalPhoneCheck.innerHTML = '<small class="text-success">Yangi sotuvchi yaratiladi</small>';
                }
            })
            .catch(() => {
                externalPhoneCheck.innerHTML = '<small class="text-danger">Tekshirishda xatolik</small>';
            });
    }

    // Phone validation for Daily Seller
    let dailyPhoneTimeout;
    function checkDailyPhone() {
        const phone = dailySellerPhone.value.trim();

        if (phone.length < 7) {
            dailyPhoneCheck.innerHTML = '';
            return;
        }

        dailyPhoneCheck.innerHTML = '<small class="text-muted">Tekshirilmoqda...</small>';

        // You'll need to create a similar API endpoint for daily sellers
        // For now, using the same endpoint
        fetch(`/inventory/check-seller-phone/?phone=${encodeURIComponent(phone)}`)
            .then(r => r.json())
            .then(data => {
                if (data.exists) {
                    dailyPhoneCheck.innerHTML = `
                        <div class="alert alert-warning py-1 px-2 mt-1">
                            <small><strong>Mavjud:</strong> ${data.seller.name}</small>
                            <button type="button" class="btn btn-sm btn-primary ms-2"
                                    onclick="selectDailySeller(${data.seller.id}, '${data.seller.name}')">
                                Tanlash
                            </button>
                        </div>
                    `;
                } else {
                    dailyPhoneCheck.innerHTML = '<small class="text-success">Yangi sotuvchi yaratiladi</small>';
                }
            })
            .catch(() => {
                dailyPhoneCheck.innerHTML = '<small class="text-danger">Tekshirishda xatolik</small>';
            });
    }

    // Select existing external seller
    window.selectExternalSeller = function(id, name) {
        externalSellerSelect.value = id;
        externalSellerName.value = '';
        externalSellerPhone.value = '';
        externalPhoneCheck.innerHTML = `<small class="text-success">Tanlandi: ${name}</small>`;
    };

    // Select existing daily seller
    window.selectDailySeller = function(id, name) {
        dailySellerSelect.value = id;
        dailySellerName.value = '';
        dailySellerPhone.value = '';
        dailyPhoneCheck.innerHTML = `<small class="text-success">Tanlandi: ${name}</small>`;
    };

    // Clear selection when typing new info
    function clearExternalSelection() {
        if (externalSellerName && externalSellerPhone) {
            if (externalSellerName.value || externalSellerPhone.value) {
                externalSellerSelect.value = '';
            }
        }
    }

    function clearDailySelection() {
        if (dailySellerName && dailySellerPhone) {
            if (dailySellerName.value || dailySellerPhone.value) {
                dailySellerSelect.value = '';
            }
        }
    }

    // Event listeners
    if (sourceType) {
        sourceType.addEventListener('change', toggleFields);
        toggleFields(); // Initialize on load
    }

    // External Seller events
    if (externalSellerPhone) {
        externalSellerPhone.addEventListener('input', function() {
            clearExternalSelection();
            clearTimeout(externalPhoneTimeout);
            externalPhoneTimeout = setTimeout(checkExternalPhone, 800);
        });
    }

    if (externalSellerName) {
        externalSellerName.addEventListener('input', clearExternalSelection);
    }

    if (externalSellerSelect) {
        externalSellerSelect.addEventListener('change', function() {
            if (externalSellerSelect.value) {
                if (externalSellerName) externalSellerName.value = '';
                if (externalSellerPhone) externalSellerPhone.value = '';
                if (externalPhoneCheck) externalPhoneCheck.innerHTML = '';
            }
        });
    }

    // Daily Seller events
    if (dailySellerPhone) {
        dailySellerPhone.addEventListener('input', function() {
            clearDailySelection();
            clearTimeout(dailyPhoneTimeout);
            dailyPhoneTimeout = setTimeout(checkDailyPhone, 800);
        });
    }

    if (dailySellerName) {
        dailySellerName.addEventListener('input', clearDailySelection);
    }

    if (dailySellerSelect) {
        dailySellerSelect.addEventListener('change', function() {
            if (dailySellerSelect.value) {
                if (dailySellerName) dailySellerName.value = '';
                if (dailySellerPhone) dailySellerPhone.value = '';
                if (dailyPhoneCheck) dailyPhoneCheck.innerHTML = '';
            }
        });
    }
});
</script>

<style>
.is-invalid {
    border-color: #dc3545 !important;
}

.alert {
    font-size: 0.875rem;
}

.card-header h6 {
    color: #495057;
