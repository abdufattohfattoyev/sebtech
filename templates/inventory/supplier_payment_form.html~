<style>
.bg-gradient-primary {
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
}

.sticky-top {
    position: sticky;
    top: 0;
    z-index: 10;
}

.btn-group input[type="radio"] {
    display: none;
}

.btn-group input[type="radio"]:checked + label {
    background-color: #0d6efd;
    color: white;
}

.phone-checkbox, #selectAll {
    cursor: pointer;
}

.font-monospace {
    font-family: 'Courier New', monospace;
}
</style>

<script>
document.addEventListener('DOMContentLoaded', function() {
    const paymentTypeRadios = document.querySelectorAll('input[name="payment_type"]');
    const phoneSelectionBlock = document.getElementById('phoneSelectionBlock');
    const phoneCheckboxes = document.querySelectorAll('.phone-checkbox');
    const selectAllCheckbox = document.getElementById('selectAll');
    const selectedCountSpan = document.getElementById('selectedCount');
    const selectedDebtSpan = document.getElementById('selectedDebt');

    // To'lov turi o'zgarganda
    paymentTypeRadios.forEach(radio => {
        radio.addEventListener('change', function() {
            if (this.value === 'specific') {
                phoneSelectionBlock.style.display = 'block';
            } else {
                phoneSelectionBlock.style.display = 'none';
                phoneCheckboxes.forEach(cb => cb.checked = false);
                updateSelectedStats();
            }
        });
    });

    // Sahifa yuklanganda
    const selectedPaymentType = document.querySelector('input[name="payment_type"]:checked');
    if (selectedPaymentType && selectedPaymentType.value === 'specific') {
        phoneSelectionBlock.style.display = 'block';
    }

    // Hammasini tanlash
    if (selectAllCheckbox) {
        selectAllCheckbox.addEventListener('change', function() {
            phoneCheckboxes.forEach(cb => {
                cb.checked = this.checked;
            });
            updateSelectedStats();
        });
    }

    // Har bir checkbox
    phoneCheckboxes.forEach(cb => {
        cb.addEventListener('change', function() {
            updateSelectedStats();

            if (!this.checked && selectAllCheckbox) {
                selectAllCheckbox.checked = false;
            }

            const allChecked = Array.from(phoneCheckboxes).every(cb => cb.checked);
            if (allChecked && selectAllCheckbox) {
                selectAllCheckbox.checked = true;
            }
        });
    });

    // Statistika yangilash
    function updateSelectedStats() {
        let count = 0;
        let totalDebt = 0;

        phoneCheckboxes.forEach(cb => {
            if (cb.checked) {
                count++;
                totalDebt += parseFloat(cb.dataset.debt);
            }
        });

        if (selectedCountSpan) selectedCountSpan.textContent = count;
        if (selectedDebtSpan) selectedDebtSpan.textContent = totalDebt.toFixed(2);
    }

    updateSelectedStats();
});
</script>
{% endblock %}