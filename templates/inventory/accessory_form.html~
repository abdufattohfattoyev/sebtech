<script>
{% if not is_edit %}
// Mavjud kod kiritilganda, yangi kod maydonini yashirish/ko'rsatish
document.addEventListener('DOMContentLoaded', function() {
    const existingCodeInput = document.querySelector('input[name="existing_code"]');
    const codeField = document.getElementById('code-field');

    if (existingCodeInput && codeField) {
        // Boshlang'ich holatni tekshirish
        toggleCodeField();

        // Input o'zgarganda
        existingCodeInput.addEventListener('input', toggleCodeField);

        function toggleCodeField() {
            if (existingCodeInput.value.trim()) {
                codeField.style.display = 'none';
                // Yangi kod maydonini tozalash
                const codeInput = codeField.querySelector('input[name="code"]');
                if (codeInput) codeInput.value = '';
            } else {
                codeField.style.display = 'block';
            }
        }
    }

    // Narxlarni formatlashtirish (mingga yaxlitlash haqida ko'rsatkich)
    const priceInputs = document.querySelectorAll('input[name="purchase_price"], input[name="sale_price"]');

    priceInputs.forEach(input => {
        input.addEventListener('blur', function() {
            if (this.value) {
                const value = parseFloat(this.value);
                if (!isNaN(value)) {
                    const rounded = Math.floor(value / 1000) * 1000;
                    if (value !== rounded) {
                        this.value = rounded;
                        // Foydalanuvchiga xabar berish
                        const helpText = this.nextElementSibling;
                        if (helpText && helpText.classList.contains('form-text')) {
                            const originalText = helpText.textContent;
                            helpText.innerHTML = '<i class="fas fa-check-circle text-success"></i> Mingga yaxlitlandi: ' + rounded.toLocaleString('uz-UZ') + ' so\'m';
                            setTimeout(() => {
                                helpText.textContent = originalText;
                            }, 3000);
                        }
                    }
                }
            }
        });
    });
});
{% endif %}
</script>
{% endblock %}