    // User role
    const userRole = '{{ request.user.userprofile.role }}';
    const canEdit = userRole === 'boss' || userRole === 'finance';

    let searchTimeout = null;

    // Image Modal Variables
    let currentZoom = 1;
    let currentRotation = 0;
    let isDragging = false;
    let startX, startY;
    let translateX = 0, translateY = 0;
    let currentImageIndex = 0;
    let allPhoneImages = [];

    // Initialize image navigation
    function initializeImageNavigation() {
        allPhoneImages = Array.from(document.querySelectorAll('.phone-image.clickable'))
            .map(function(div) {
                return {
                    src: div.getAttribute('data-image'),
                    alt: div.getAttribute('data-model')
                };
            })
            .filter(function(img) {
                return img.src;
            });
    }

    // Image Modal Functions
    function openImageModal(imageSrc, altText) {
        if (!imageSrc) return;

        initializeImageNavigation();

        currentImageIndex = allPhoneImages.findIndex(function(img) {
            return img.src === imageSrc;
        });
        if (currentImageIndex === -1) currentImageIndex = 0;

        const modal = document.getElementById('imageModal');
        const modalImg = document.getElementById('modalImage');
        const modalLoading = document.getElementById('modalLoading');

        modal.classList.add('active');
        modalLoading.classList.remove('d-none');
        modalImg.style.display = 'none';

        currentZoom = 1;
        currentRotation = 0;
        translateX = 0;
        translateY = 0;

        modalImg.src = imageSrc;
        modalImg.alt = altText;

        document.body.style.overflow = 'hidden';
        updateNavigationButtons();
    }

    function imageLoaded() {
        const modalLoading = document.getElementById('modalLoading');
        modalLoading.classList.add('d-none');
        const modalImg = document.getElementById('modalImage');
        modalImg.style.display = 'block';
    }