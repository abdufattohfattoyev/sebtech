{% block extra_js %}
<script>
// Foydalanuvchi roli
const userRole = '{{ request.user.userprofile.role }}';
const canEdit = userRole === 'boss' || userRole === 'finance';

let searchTimeout = null;

const performSearch = (page = 1) => {
    clearTimeout(searchTimeout);

    const formData = new FormData(document.getElementById('search-form'));
    const imei = (formData.get('imei') || '').replace(/\D/g, '');

    const params = new URLSearchParams();
    if (imei) params.set('imei', imei);
    if (formData.get('model')) params.set('model', formData.get('model').trim());
    if (formData.get('status')) params.set('status', formData.get('status'));
    if (formData.get('shop_id')) params.set('shop_id', formData.get('shop_id'));
    params.set('page', page);

    // Update URL
    const newUrl = `${window.location.pathname}?${params.toString()}`;
    window.history.pushState({}, '', newUrl);

    // Show loading
    document.getElementById('loading').classList.remove('d-none');
    document.getElementById('phones-container').style.opacity = '0.5';

    searchTimeout = setTimeout(() => {
        fetch(`${window.location.pathname}?${params.toString()}`, {
            headers: {
                'X-Requested-With': 'XMLHttpRequest',
                'Accept': 'application/json'
            }
        })
        .then(response => {
            if (!response.ok) {
                throw new Error('Network response was not ok');
            }
            return response.json();
        })
        .then(data => {
            updateStats(data.stats);
            updateResults(data.phones);
            updatePagination(data);

            // Scroll to top
            window.scrollTo({ top: 0, behavior: 'smooth' });
        })
        .catch(error => {
            console.error('Search error:', error);
        })
        .finally(() => {
            document.getElementById('loading').classList.add('d-none');
            document.getElementById('phones-container').style.opacity = '1';
        });
    }, 200);
};

const updateStats = (stats) => {
    if (!stats) return;
    document.getElementById('total-phones').textContent = stats.total_phones || 0;
    document.getElementById('displayed-phones').textContent = stats.displayed || 0;
    document.getElementById('shop-phones').textContent = stats.phones_in_shop || 0;
    document.getElementById('sold-phones').textContent = stats.phones_sold || 0;
};

const updateResults = (phones) => {
    const container = document.getElementById('phones-grid');

    if (!phones || phones.length === 0) {
        container.innerHTML = `
            <div class="empty-state">
                <i class="fas fa-mobile-alt fa-2x mb-2"></i>
                <h5 class="text-muted">Telefonlar topilmadi</h5>
                <p class="mb-2">Qidiruv bo'yicha natija yo'q</p>
                <a href="{% url 'inventory:phone_create' %}" class="btn btn-primary btn-sm">
                    <i class="fas fa-plus me-1"></i>Yangi qo'shish
                </a>
            </div>`;
        return;
    }

    container.innerHTML = phones.map(phone => `
        <div class="phone-card">
            <div class="phone-image">
                ${phone.image ?
                    `<img src="${phone.image}" alt="${phone.phone_model}">` :
                    `<div class="phone-placeholder"><i class="fas fa-mobile-alt"></i></div>`
                }
            </div>
            <div class="phone-info">
                <h6 class="phone-title">${phone.phone_model}</h6>
                <div class="phone-specs">
                    <span class="spec-badge primary">${phone.memory_size}</span>
                    <span class="spec-badge">${phone.shop_name}</span>
                </div>
                <div class="phone-details">
                    <div class="detail-row">
                        <span class="detail-label">IMEI:</span>
                        <span class="detail-value imei-code">${phone.imei || '—'}</span>
                    </div>
                    <div class="detail-row">
                        <span class="detail-label">Holat:</span>
                        <span class="detail-value">${phone.condition_percentage}%</span>
                    </div>
                    <div class="detail-row">
                        <span class="detail-label">Narx:</span>
                        <span class="detail-value">
                            ${canEdit ? '$' + Math.round(phone.cost_price) : '<i class="fas fa-lock"></i>'}
                        </span>
                    </div>
                </div>
                <div class="phone-footer">
                    <div class="phone-price">$${phone.sale_price ? Math.round(phone.sale_price) : '—'}</div>
                    <span class="phone-status ${phone.status}">${phone.status_display}</span>
                </div>
                ${canEdit ? `
                    <div class="phone-actions">
                        <a href="/inventory/phones/${phone.id}/" class="action-btn primary" title="Ko'rish">
                            <i class="fas fa-eye"></i>
                        </a>
                        <a href="/inventory/phones/${phone.id}/edit/" class="action-btn warning" title="Tahrirlash">
                            <i class="fas fa-edit"></i>
                        </a>
                        <a href="/inventory/phones/${phone.id}/delete/" class="action-btn danger" title="O'chirish">
                            <i class="fas fa-trash"></i>
                        </a>
                    </div>
                ` : `
                    <div class="phone-actions">
                        <span class="action-btn primary disabled" title="Ruxsat yo'q">
                            <i class="fas fa-lock"></i>
                        </span>
                        <span class="action-btn warning disabled" title="Ruxsat yo'q">
                            <i class="fas fa-lock"></i>
                        </span>
                        <span class="action-btn danger disabled" title="Ruxsat yo'q">
                            <i class="fas fa-lock"></i>
                        </span>
                    </div>
                `}
            </div>
        </div>
    `).join('');
};

const updatePagination = (data) => {
    const container = document.getElementById('pagination-container');
    const pagination = document.getElementById('pagination');

    if (!data.total_pages || data.total_pages <= 1) {
        container.style.display = 'none';
        return;
    }

    container.style.display = 'block';

    let html = '';

    // Previous button
    if (data.has_previous) {
        html += `<li class="page-item">
            <a class="page-link" href="javascript:void(0)" data-page="${data.current_page - 1}">&laquo;</a>
        </li>`;
    }

    // Page numbers
    const startPage = Math.max(1, data.current_page - 2);
    const endPage = Math.min(data.total_pages, data.current_page + 2);

    for (let i = startPage; i <= endPage; i++) {
        html += `<li class="page-item ${i === data.current_page ? 'active' : ''}">
            <a class="page-link" href="javascript:void(0)" data-page="${i}">${i}</a>
        </li>`;
    }

    // Next button
    if (data.has_next) {
        html += `<li class="page-item">
            <a class="page-link" href="javascript:void(0)" data-page="${data.current_page + 1}">&raquo;</a>
        </li>`;
    }

    pagination.innerHTML = html;

    // Add event listeners to new pagination links
    pagination.querySelectorAll('[data-page]').forEach(link => {
        link.addEventListener('click', function(e) {
            e.preventDefault();
            const page = parseInt(this.getAttribute('data-page'));
            if (page) {
                performSearch(page);
            }
        });
    });
};

document.addEventListener('DOMContentLoaded', () => {
    // IMEI field - clean and search on input
    const imeiField = document.getElementById('imei');
    if (imeiField) {
        imeiField.addEventListener('input', (e) => {
            e.target.value = e.target.value.replace(/\D/g, '').substring(0, 15);
            performSearch(1);
        });
    }

    // Other filter fields - search on change
    ['model', 'status', 'shop_id'].forEach(id => {
        const field = document.getElementById(id);
        if (field) {
            field.addEventListener('change', () => performSearch(1));
        }
    });

    // Clear filters button
    const clearBtn = document.getElementById('clear-filters');
    if (clearBtn) {
        clearBtn.addEventListener('click', () => {
            document.getElementById('search-form').reset();
            window.history.pushState({}, '', window.location.pathname);
            performSearch(1);
        });
    }

    // Form submit
    const searchForm = document.getElementById('search-form');
    if (searchForm) {
        searchForm.addEventListener('submit', (e) => {
            e.preventDefault();
            performSearch(1);
        });
    }

    // Initial pagination event listeners
    document.querySelectorAll('#pagination [data-page]').forEach(link => {
        link.addEventListener('click', function(e) {
            e.preventDefault();
            const page = parseInt(this.getAttribute('data-page'));
            if (page) {
                performSearch(page);
            }
        });
    });
});
</script>
{% endblock %}