<script>
// Search functionality
const debounce = (func, wait) => {
    let timeout;
    return (...args) => {
        clearTimeout(timeout);
        timeout = setTimeout(() => func(...args), wait);
    };
};

const performSearch = (page = 1) => {
    const formData = new FormData(document.getElementById('search-form'));
    const params = new URLSearchParams({
        code: formData.get('code') || '',
        name: formData.get('name') || '',
        shop_id: formData.get('shop_id') || '',
        stock_level: formData.get('stock_level') || '',
        page: page
    });

    window.history.pushState({}, '', `{% url 'inventory:accessory_list' %}?${params}`);
    document.getElementById('loading').classList.remove('d-none');

    fetch(`{% url 'inventory:accessory_search' %}?${params}`, {
        headers: { 'X-Requested-With': 'XMLHttpRequest' }
    })
    .then(response => response.json())
    .then(data => {
        document.getElementById('total-accessories').textContent = data.total_count || 0;
        document.getElementById('displayed-accessories').textContent = data.accessories.length || 0;
        document.getElementById('total-accessory-cost').textContent = `${data.total_accessory_cost.toLocaleString('uz-UZ')} so'm`;

        const container = document.getElementById('accessories-grid');
        if (!data.accessories.length) {
            container.innerHTML = `
                <div class="empty">
                    <div class="empty-icon"><i class="fas fa-headphones"></i></div>
                    <h4>Topilmadi</h4>
                    <p>Qidiruv bo'yicha natija yo'q.</p>
                </div>`;
            return;
        }

        container.innerHTML = data.accessories.map(a => `
            <div class="card">
                <div class="card-main">
                    <div class="card-image">
                        ${a.image ? `<img src="${a.image}" alt="${a.name}">` : `<div class="placeholder"><i class="fas fa-headphones"></i></div>`}
                        <div class="stock ${a.quantity < 5 ? 'low' : a.quantity < 10 ? 'medium' : 'high'}">${a.quantity}</div>
                    </div>
                    <div class="card-info">
                        <div class="card-name">${a.name}</div>
                        <div class="card-code">${a.code}</div>
                        <div class="card-shop">${a.shop_name}</div>
                        <div class="price-section">
                            <div class="price-label">Sotish narxi</div>
                            <div class="card-price">${a.sale_price.toLocaleString('uz-UZ')} so'm</div>
                        </div>
                    </div>
                </div>
                <div class="card-meta">
                    <div class="meta-item">
                        <div class="meta-label">Tannarx</div>
                        <div class="meta-value">${a.purchase_price.toLocaleString('uz-UZ')} so'm</div>
                    </div>
                    <div class="meta-item">
                        <div class="meta-label">Soni</div>
                        <div class="meta-value">${a.quantity}</div>
                    </div>
                    <div class="meta-item">
                        <div class="meta-label">Umumiy Qiymat</div>
                        <div class="meta-value">${a.total_cost.toLocaleString('uz-UZ')} so'm</div>
                    </div>
                </div>
                ${a.can_edit ? `
                    <div class="card-actions">
                        <a href="/inventory/accessories/${a.id}/add-quantity/" class="action add">
                            <i class="fas fa-plus"></i><span class="d-none d-sm-inline ms-1">Qo'sh</span>
                        </a>
                        <a href="/inventory/accessories/${a.id}/edit/" class="action edit">
                            <i class="fas fa-edit"></i><span class="d-none d-sm-inline ms-1">Tahrir</span>
                        </a>
                        <a href="/inventory/accessories/${a.id}/delete/" class="action delete" onclick="return confirm('${a.name} ni o\\'chirmoqchimisiz?')">
                            <i class="fas fa-trash"></i><span class="d-none d-sm-inline ms-1">O'chir</span>
                        </a>
                    </div>
                ` : ''}
            </div>
        `).join('');
    })
    .catch(console.error)
    .finally(() => document.getElementById('loading').classList.add('d-none'));
};

const debouncedSearch = debounce(performSearch, 300);

document.addEventListener('DOMContentLoaded', () => {
    ['code', 'name', 'shop_id', 'stock_level'].forEach(id => {
        const field = document.getElementById(id);
        if (field) field.addEventListener(field.type === 'text' ? 'input' : 'change', () => debouncedSearch(1));
    });

    document.getElementById('clear-filters').addEventListener('click', () => {
        document.getElementById('search-form').reset();
        debouncedSearch(1);
    });

    document.getElementById('search-form').addEventListener('submit', e => {
        e.preventDefault();
        performSearch(1);
    });
});
</script>
{% endblock %}